losetup /dev/loop0 /hd2.img
mount /dev/loop0 /mnt

echo hello > /mnt/hello
umount /mnt
losetup -d /dev/loop0

losetup /dev/loop0 /hd2.img
mount /dev/loop0 /mnt

echo bye > /mnt/bye
umount /mnt
losetup -d /dev/loop0

losetup /dev/loop0 /hd2.img
mount /dev/loop0 /mnt

ls -la /mnt
cat /mnt/hello
cat /mnt/bye

umount /mnt
losetup -d /dev/loop0
